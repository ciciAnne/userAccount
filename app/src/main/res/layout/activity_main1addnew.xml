<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cici.useraccountapp.Main1addnewActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView5"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/arrowleft"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:id="@+id/textView8"
        android:layout_below="@+id/back"
        android:layout_alignLeft="@+id/back"
        android:layout_alignStart="@+id/back"
        android:background="#648B97"
        android:layout_marginTop="5dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="40dp"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8"
        android:id="@+id/gridLayout"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应用名"
            android:id="@+id/textView9"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="15dp"
            android:layout_marginBottom="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号名"
            android:id="@+id/textView10"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="15dp"
            android:layout_marginBottom="40dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/appname"
            android:layout_row="0"
            android:layout_column="1" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/account"
            android:layout_row="1"
            android:layout_column="1" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:layout_row="2"
            android:layout_column="1" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:layout_row="3"
            android:layout_column="1" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:layout_row="4"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:id="@+id/textView11"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginBottom="40dp"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密保手机"
            android:id="@+id/textView12"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="15dp"
            android:layout_marginBottom="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密保邮箱"
            android:id="@+id/textView13"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_marginBottom="40dp"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他"
            android:id="@+id/textView14"
            android:layout_row="5"
            android:layout_column="0"
            android:textIsSelectable="false"
            android:textSize="15dp"
            android:layout_marginBottom="40dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/other"
            android:layout_row="5"
            android:layout_column="1" />

    </GridLayout>

    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="取消"
        android:id="@+id/cancle"
        android:layout_below="@+id/gridLayout"
        android:layout_alignLeft="@+id/gridLayout"
        android:layout_alignStart="@+id/gridLayout"
        android:textColor="#ffffff"
        android:background="#7DA3AF" />

    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="保存"
        android:id="@+id/yes"
        android:layout_below="@+id/gridLayout"
        android:layout_alignRight="@+id/gridLayout"
        android:layout_alignEnd="@+id/gridLayout"
        android:textColor="#ffffff"
        android:background="#7DA3AF" />

</RelativeLayout>
